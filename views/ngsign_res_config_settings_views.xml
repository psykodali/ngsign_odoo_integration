<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add NGSIGN settings to the Settings page -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ngsign</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- Add after the company field at the very top -->
                <xpath expr="//field[@name='company_id']" position="after">
                    <separator string="NGSIGN Integration" class="mt-3"/>
                    <group>
                        <group string="API Configuration">
                            <field name="ngsign_url" 
                                   string="NGSIGN API URL"
                                   placeholder="https://sandbox.ng-sign.com/server/protected/transaction/"/>
                            <field name="ngsign_bearer_token" 
                                   string="NGSIGN Bearer Token"
                                   password="True" 
                                   placeholder="Enter your bearer token"/>
                        </group>
                    </group>
                    <separator/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>