<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ngsign</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="NGSIGN Integration" name="ngsign_integration">
                        <block title="NGSIGN Configuration">
                            <setting>
                                <label for="ngsign_url" string="NGSIGN API URL"/>
                                <div class="text-muted">
                                    Base URL for the NGSIGN API endpoint
                                </div>
                                <field name="ngsign_url" 
                                       class="oe_inline" 
                                       placeholder="https://sandbox.ng-sign.com/server/protected/transaction/"/>
                            </setting>
                            <setting>
                                <label for="ngsign_bearer_token" string="NGSIGN Bearer Token"/>
                                <div class="text-muted">
                                    Your API authentication bearer token
                                </div>
                                <field name="ngsign_bearer_token" 
                                       password="True" 
                                       class="oe_inline"
                                       placeholder="Enter your bearer token"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>