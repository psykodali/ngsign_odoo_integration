<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Signer Selection Wizard Form -->
        <record id="view_ngsign_signer_wizard_form" model="ir.ui.view">
            <field name="name">ngsign.signer.wizard.form</field>
            <field name="model">ngsign.signer.wizard</field>
            <field name="arch" type="xml">
                <form string="Select Signer">
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="partner_id" invisible="1"/>
                        <field name="available_signers" invisible="1"/>
                        <group>
                            <label for="signer_id" string="Select Contact to Sign"/>
                            <field name="signer_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Choose a contact from the company..."/>
                        </group>
                    </group>
                    <footer>
                        <button string="Send for Signature" 
                                name="action_confirm_signer" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>