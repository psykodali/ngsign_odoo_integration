<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Signer Selection Wizard Form -->
        <record id="view_ngsign_signer_wizard_form" model="ir.ui.view">
            <field name="name">ngsign.signer.wizard.form</field>
            <field name="model">ngsign.signer.wizard</field>
            <field name="arch" type="xml">
                <form string="Select Signer">
                    <sheet>
                        <group>
                            <field name="sale_order_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="has_previous_signature" invisible="1"/>
                            <field name="previous_signature_email" invisible="1"/>
                            <field name="previous_signature_date" invisible="1"/>
                        </group>
                        
                        <!-- Warning banner if already sent -->
                        <div class="alert alert-warning" role="alert" invisible="not has_previous_signature">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-exclamation-triangle fa-2x me-3"/>
                                <div>
                                    <strong>This document was already sent for signature</strong>
                                    <div class="mt-1">
                                        Previously sent to: <strong><field name="previous_signature_email" readonly="1" class="oe_inline"/></strong>
                                    </div>
                                    <div class="text-muted small" invisible="not previous_signature_date">
                                        On: <field name="previous_signature_date" readonly="1" class="oe_inline"/>
                                    </div>
                                    <div class="mt-2">
                                        Sending again will create a new signature request.
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <group string="Select Contact">
                            <field name="signer_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Choose a contact from the company..."/>
                        </group>
                        
                        <group string="Contact Information" invisible="not signer_id">
                            <group>
                                <field name="signer_email" 
                                       placeholder="contact@example.com"
                                       required="signer_id"/>
                                <field name="signer_phone" 
                                       placeholder="+216 12 345 678"/>
                            </group>
                        </group>
                        
                        <group string="Signature Configuration" invisible="not signer_id">
                            <field name="template_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Select signature placement template..."/>
                        </group>
                        
                        <group invisible="not signer_id">
                            <field name="update_contact" 
                                   widget="boolean_toggle"
                                   string="Save changes to contact"/>
                        </group>
                        
                        <div class="alert alert-info text-center" role="alert" invisible="not update_contact">
                            <i class="fa fa-info-circle"/> The contact information will be updated with the values above.
                        </div>
                    </sheet>
                    
                    <footer>
                        <button string="Send for Signature" 
                                name="action_confirm_signer" 
                                type="object" 
                                class="btn-primary"
                                invisible="has_previous_signature or not signer_id"/>
                        <button string="Resend for Signature" 
                                name="action_confirm_signer" 
                                type="object" 
                                class="btn-warning"
                                invisible="not has_previous_signature or not signer_id"
                                confirm="This will create a new signature request. The previous request will remain active. Are you sure you want to continue?"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>