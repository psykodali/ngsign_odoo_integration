<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_ngsign" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.ngsign</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add the button to the header -->
                <xpath expr="//header" position="inside">
                    <button name="action_send_with_ngsign" 
                            string="Send with NGSIGN" 
                            type="object" 
                            class="btn-primary"
                            invisible="state not in ['draft', 'sent'] or ngsign_transaction_uuid"/>
                    <button name="action_send_with_ngsign" 
                            string="Resend with NGSIGN" 
                            type="object" 
                            class="btn-warning"
                            invisible="state not in ['draft', 'sent'] or not ngsign_transaction_uuid"/>
                </xpath>
                
                <!-- Add fields to display transaction info on the form -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="ngsign_transaction_uuid" readonly="1" invisible="not ngsign_transaction_uuid"/>
                    <field name="ngsign_signature_url" widget="url" readonly="1" invisible="not ngsign_signature_url"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>